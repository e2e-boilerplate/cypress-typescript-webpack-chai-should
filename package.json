{
  "name": "cypress-typescript-webpack",
  "version": "1.0.0",
  "description": "cypress end-to-end test automation boilerplate project. Using TypeScript and webpack.",
  "scripts": {
    "clean:video": "npx rimraf cypress/videos/*",
    "clean:screenshots": "npx cypress/screenshots/*",
    "open": "npx cypress open",
    "test": "npx cypress run",
    "test-ci": "npx cypress run --headless",
    "lint": "npx tslint -c tslint.json './cypress/integration/*.ts'",
    "pretty": "npx prettier --no-config './cypress/**/*.ts' --write"
  },
  "keywords": [
    "cypress",
    "typescript",
    "webpack",
    "boilerplate",
    "example"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.1.1",
    "cypress": "3.8.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "ts-loader": "6.2.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.4",
    "webpack": "4.41.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
